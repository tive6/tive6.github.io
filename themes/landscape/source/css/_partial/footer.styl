#footer
  background: color-footer-background
  padding: 25px 0
  border-top: 1px solid color-border
  color: color-grey
  text-align: center

  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height
  font-size: 0.85em

.fixed-btn
  cursor: pointer
  position: fixed
  bottom: 5%
  right: 20px;
  padding: 5px
  background-color: #fff
  border: 1px solid #eee
  box-shadow: 0 0 5px #eee
  display: none

.go-top
  display: block
  width: 20px
  height: 30px
  border-radius: 50%
  background: url(//tiven.cn/assets/img/icon-goTop.png) no-repeat center
  background-size: 100%

