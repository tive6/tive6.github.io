#comments
  background: #fff
  box-shadow: 1px 2px 3px #ddd
  padding: article-padding
  border: 1px solid color-border
  border-radius: 3px
  margin: block-margin 0
  a
    color: color-link

  .comment-head {
    font-weight bold
    font-size 20px
    margin-bottom 20px
    &:before {
      font-family: font-icon
      content '\f086'
      margin-right 5px
    }
  }