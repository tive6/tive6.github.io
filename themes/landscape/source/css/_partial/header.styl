#header
  height: banner-height
  position: relative
  border-bottom: 1px solid color-border
  //overflow: hidden
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
    background: linear-gradient(rgba(0, 0, 0, 0.2), transparent)
  &:after
    bottom: 0
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.2))

#header-outer
  box-sizing : border-box
  height: 100%
  position: relative
  padding: 0

#header-inner
  box-sizing : border-box
  width: 100%
  background-color: rgba(0, 0, 0, 0.3)
  position: relative
  overflow: hidden
  margin: 0
  padding: 0 20px

#banner
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.7) url(banner-url) no-repeat center fixed
  background-size: cover
  z-index: -1

#header-title
  text-align: center
  position: absolute
  top: 40%
  left: 0

$logo-text
  text-decoration: none
  color: #fff
  font-weight: 400
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)

#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px
  text-align center
  position relative
  display block
  width 100%

  .inner-span
    @extend $logo-text
    display inline-block
    font-size: subtitle-size
    line-height: subtitle-size
    letter-spacing: 1px

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  //margin-left: -15px

$nav-link
  float: left
  color: #fff
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 22px 15px
  position: relative
  cursor: pointer
  transition all 0.2s linear
  &:hover
    transform scale(1.2)

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  //margin-right: -15px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777



/* 文章搜索 */
.site-search-form
  //display none
  box-sizing border-box
  position: absolute
  //width: calc(100% - 40px);
  width: 80%
  padding 20px
  //height: 30px
  //top: -100px
  top -230px
  left: 10%
  z-index 999
  opacity: 1
  background-color #fff
  border-radius 8px
  box-shadow 0 0 10px #ddd
  transition: all 0.3s ease-out
  &.show
    opacity: 1
    top 50px
  @media mq-mobile
    width: calc(100% - 40px);
    left: 20px

.site-search-h2
  padding: 0 0 0.7rem;
  color: #49b1f5;
  font-size: 1.2em;
  user-select: none;


.st-search-input
  box-sizing border-box
  padding: 0.25rem 0.7rem;
  width: 100%;
  outline: none;
  border: 2px solid #49b1f5;
  border-radius: 2rem;
  //background: var(--search-bg);
  //color: var(--search-input-color);
  -webkit-appearance: none;


.site-search-hr
  margin: 1rem auto;
  border: 1px dashed #A4D8FA;
  width: calc(100% - 10px);

.local-search {
  position: relative;
  text-align: left;
  margin-bottom: 10px;
}


#local-search-close {
  //content: 'x';
  width 24px
  height 24px
  position: absolute;
  right: 10px;
  top: 10px;
  //background: #fff;
  background url("./../img/icon-close-01.png") no-repeat center
  background-size 100%
  color: #888;
  display: block;
  cursor: pointer;
  font-style: normal;
  font-weight: normal;
  transform: rotateZ(0);
  transition: all 0.3s;
  &:hover {
    transform: rotateZ(180deg);
  }
}

.local-search-result-cls {
  .local-search-empty {
    color: #888;
    line-height: 44px;
    text-align: center;
    display: block;
    font-size: 16px;
    font-weight: normal;
  }
  .search-result-list {
    box-sizing border-box
    width: 100%;
    max-height: calc(100vh - 230px);
    min-height: 0;
    height: auto;
    overflow-y: auto;
    //border: 1px solid #CCC;
    padding: 10px 10px;
    background: #FFF;
    //box-shadow: 1px 2px 4px #CCC;

    &::-webkit-scrollbar-thumb {
      border-radius: 4px;
      background: #A4D8FA;
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.5);
    }

    li {
      text-align: left;
      border-bottom: 1px solid #CCC;
      padding-bottom: 20px;
      margin-bottom: 20px;
      line-height: 30px;
      font-weight: normal;
      &:last-child {
        border-bottom: none;
        margin-bottom: 0;
      }
      a {
        color #3577FF
        margin-top: 20px;
        font-size: 14px;
        font-weight 600
        text-decoration none
        &:hover{
          color: #5e99ff;
        }
        &:active {
          color
        }
      }
      p {
        color #666
        margin-top: 10px;
        font-size: 12px;
        max-height: 124px;
        line-height 1.8
        overflow: hidden;
      }
      em.search-keyword {
        color: #F57527;
        //text-decoration underline
      }
    }
  }
}

.local-search-plugin {
  .local-search-input-cls {
    opacity: 0.6;
    width: 160px;
    transition: all 0.3s;
    &:hover {
      opacity: 1;
      width: 200px;
      transition: all 0.3s;
    }
  }
  .icon {
    position: relative;
    left: -30px;
    color: #999;
    cursor: pointer;
  }
}


#search-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 111;
  display: none;
  background: rgba(0,0,0,0.6);
  //display: block;
  animation: 0.5s ease 0s 1 normal none running to_show
}

@media mq-mobile {
  .search-result-list {
    overflow-y scroll
    &::-webkit-scrollbar {
      width: 0!important;
    }
    &::-webkit-scrollbar-thumb {
      background: transparent!important;
    }
  }
}


.img-logo
  display block
  width 200px
  margin 0 auto
  opacity 0
  user-select none
  pointer-events none